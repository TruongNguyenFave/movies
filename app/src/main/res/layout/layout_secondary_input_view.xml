<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:background="@drawable/background_border_gray"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/helvetica_neue_regular"
            android:includeFontPadding="false"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/doveGray"
            android:textColorHint="@color/doveGray"
            android:textSize="@dimen/sp_15"
            tools:hint="Input something"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_light"
        android:textColor="@color/alizarinCrimson"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutInput"
        tools:text="This is error message"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
